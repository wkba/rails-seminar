<h1>Edit Post</h1>
<%= form_for(@post) do |f| %>
  <div class="field">
  	<%= f.label :category_id %><br>
  	<%= f.number_field :category_id %>
  </div>
  <div class="field">
  	<%= f.label :title %><br>
  	<%= f.text_field :title %>
  </div>
  <div class="field">
  	<%= f.label :body %><br>
  	<%= f.text_area :body %>
  </div>
  <div class="actions">
  	<%= f.submit %>
  </div>
 <% end %>